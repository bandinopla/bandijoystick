{
  "name": "bandijoystick",
  "description": "A Javasript library to turn a phone into a remote control",
  "private": false,
  "version": "0.1.2",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bandinopla/bandijoystick.git" 
  },
  "homepage": "https://bandijoystickjs.web.app/",
  "author": {
    "name": "Bandinopla", 
    "url": "https://bandinopla.github.io/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bandinopla/bandijoystick/issues"
  },
  "scripts": {
	"build": "tsc && vite build"
  },
  "files": [
    "dist",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  
  "main": "./dist/bandijoystick.cjs",
  "module": "./dist/bandijoystick.js",
  "types": "./dist/BandiJoystick.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bandijoystick.js",
      "require": "./dist/bandijoystick.cjs"
    }
  },
  
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
