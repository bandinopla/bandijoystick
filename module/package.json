    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.1.14",
	"vite-plugin-package-version": "^1.1.0",
	"@types/three": "^0.180.0",
	"vite-plugin-dts": "^4.5.4"
  },

  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.14"
    }
  },

  "dependencies": { 
  },

  "peerDependencies": {
	  "qrcode": "^1.5.4",
	  "trystero": "^0.22.0" 
  },

  "keywords": [
	"trystero",
	"remote",
	"joystick",
    "webrtc",
    "p2p",
    "peer to peer",
    "chat",
